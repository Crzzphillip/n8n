{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "@n8n/composables/*": ["shims/@n8n/composables/*"],
      "@n8n/*": [
        "shims/@n8n/*/src/index.ts",
        "@n8n/*/src/index.ts"
      ],
      "@/constants": [
        "constants.ts"
      ],
      "n8n-workflow": [
        "workflow/src/index.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "stores/**/*.ts",
    "utils/**/*.ts",
    "shims/**/*.ts",
    "shims/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "@n8n/**",
    "!shims/@n8n/**"
  ]
}